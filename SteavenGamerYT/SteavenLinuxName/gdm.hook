[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = gdm
Target = libgdm

[Action]
Description = Updating GNOME login screen logo...
When = PostTransaction
Exec = /bin/bash -c 'sed -i "s|archlinux-logo-text-dark.svg|steavenlinux-logo.png|" /usr/share/glib-2.0/schemas/org.gnome.login-screen.gschema.override'
Depends = sed
